@using DuPharma.Models
@model List<Batch>
@{
    ViewData["Title"] = "Batches";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Medicine Batches</h2>
    <a asp-action="Create" class="btn btn-primary">Add New Batch</a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Medicine</th>
                        <th>Batch Number</th>
                        <th>Supplier</th>
                        <th>Expiry Date</th>
                        <th>Quantity</th>
                        <th>Purchase Price</th>
                        <th>Selling Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var batch in Model)
                    {
                        var isExpired = batch.ExpiryDate <= DateTime.Now;
                        var isExpiringSoon = batch.ExpiryDate <= DateTime.Now.AddDays(90) && !isExpired;
                        var rowClass = isExpired ? "table-danger" : (isExpiringSoon ? "table-warning" : "");
                        
                        <tr class="@rowClass">
                            <td>@batch.Medicine.GenericName</td>
                            <td>@batch.BatchNumber</td>
                            <td>@batch.Supplier.Name</td>
                            <td>@batch.ExpiryDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <span class="badge @(batch.QuantityOnHand > 0 ? "bg-success" : "bg-secondary")">
                                    @batch.QuantityOnHand
                                </span>
                            </td>
                            <td>$@batch.PurchasePrice.ToString("F2")</td>
                            <td>$@batch.SellingPrice.ToString("F2")</td>
                            <td>
                                @if (isExpired)
                                {
                                    <span class="badge bg-danger">Expired</span>
                                }
                                else if (isExpiringSoon)
                                {
                                    <span class="badge bg-warning">Expiring Soon</span>
                                }
                                else if (batch.QuantityOnHand == 0)
                                {
                                    <span class="badge bg-secondary">Out of Stock</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Available</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@batch.BatchId" class="btn btn-sm btn-warning">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>