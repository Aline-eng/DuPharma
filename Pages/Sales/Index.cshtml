@model List<Sale>
@{
    ViewData["Title"] = "Sales";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Sales History</h2>
    <a asp-action="Create" class="btn btn-primary">New Sale</a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Invoice #</th>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Sold By</th>
                        <th>Total Amount</th>
                        <th>Payment Method</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sale in Model)
                    {
                        <tr>
                            <td>@sale.InvoiceNumber</td>
                            <td>@sale.SaleDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@(sale.Customer?.FullName ?? "Walk-in Customer")</td>
                            <td>@sale.SoldByUser.FullName</td>
                            <td>$@sale.TotalAmount.ToString("F2")</td>
                            <td>@sale.PaymentMethod</td>
                            <td>
                                <a asp-action="Receipt" asp-route-id="@sale.SaleId" class="btn btn-sm btn-secondary">Receipt</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        @if (!Model.Any())
        {
            <p class="text-muted text-center">No sales found.</p>
        }
    </div>
</div>