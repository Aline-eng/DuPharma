<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DuPharma</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <img src="~/DupharmaIcon.svg" alt="DuPharma" class="logo-icon-svg" />
                    <span class="logo-text">DuPharma</span>
                </div>
            </div>
            
            @if (User.Identity!.IsAuthenticated)
            {
                <ul class="sidebar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <span>Overview</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Medicines" asp-action="Index">
                            <span>Medicines</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Sales" asp-action="Index">
                            <span>Sales</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Customers" asp-action="Index">
                            <span>Customers</span>
                        </a>
                    </li>
                    @if (User.IsInRole("Manager") || User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Batches" asp-action="Index">
                                <span>Batches</span>
                            </a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Reports" asp-action="Index">
                            <span>Reports</span>
                        </a>
                    </li>
                </ul>
                
                <div class="sidebar-footer">
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="logout-btn">Logout</button>
                    </form>
                </div>
            }
        </nav>

        <!-- Main Content -->
        <div class="main-content">
            @if (User.Identity!.IsAuthenticated)
            {
                <header class="top-header">
                    <div class="user-info">
                        <div class="user-avatar">
                            @User.Identity.Name?.Substring(0, 2).ToUpper()
                        </div>
                        <div class="user-details">
                            <div class="user-name">@User.Identity.Name</div>
                            <div class="user-role">@(User.IsInRole("Admin") ? "Admin" : User.IsInRole("Manager") ? "Manager" : "Pharmacist")</div>
                        </div>
                    </div>
                </header>
            }
            
            <main class="content-area">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>