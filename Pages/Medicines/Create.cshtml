@model Medicine
@{
    ViewData["Title"] = "Create Medicine";
}

<h2>Create New Medicine</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-group mb-3">
                <label asp-for="GenericName" class="form-label"></label>
                <input asp-for="GenericName" class="form-control" />
                <span asp-validation-for="GenericName" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="BrandName" class="form-label"></label>
                <input asp-for="BrandName" class="form-control" />
                <span asp-validation-for="BrandName" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Strength" class="form-label"></label>
                <input asp-for="Strength" class="form-control" />
                <span asp-validation-for="Strength" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Form" class="form-label"></label>
                <select asp-for="Form" class="form-control">
                    <option value="">Select Form</option>
                    <option value="Tablet">Tablet</option>
                    <option value="Capsule">Capsule</option>
                    <option value="Syrup">Syrup</option>
                    <option value="Injection">Injection</option>
                    <option value="Cream">Cream</option>
                    <option value="Drops">Drops</option>
                </select>
                <span asp-validation-for="Form" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Unit" class="form-label"></label>
                <select asp-for="Unit" class="form-control">
                    <option value="">Select Unit</option>
                    <option value="Piece">Piece</option>
                    <option value="Bottle">Bottle</option>
                    <option value="Box">Box</option>
                    <option value="Tube">Tube</option>
                </select>
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="ReorderLevel" class="form-label"></label>
                <input asp-for="ReorderLevel" class="form-control" type="number" />
                <span asp-validation-for="ReorderLevel" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}